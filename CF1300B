#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
 int t;
 cin>>t;
 while(t--){
     int halves;
     cin>>halves;
     vector<int>arr;
     for(int i=0;i<2*halves;i++){
     int x;
     cin>>x;
     arr.push_back(x);
     }
     sort(arr.begin(),arr.end());
     int diff=arr[halves]-arr[halves-1];
     cout<<diff<<endl;
 }
          
    
  
 return 0;
}
