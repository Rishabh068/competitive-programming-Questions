#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
 
  string str;
  string res="";
  int t;
  cin>>t;
  cin>>str;
  int jumpfactor=2;
  res.push_back(str[0]);
  int i=1;
 while(i<str.length()){
     res.push_back(str[i]);
     i+=jumpfactor;
     jumpfactor++;
 }
 cout<<res;
  
 return 0;
}
